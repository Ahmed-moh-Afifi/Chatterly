# Firebase project ID
FirebaseProjectId=your_firebase_project_id_here

# Path to your Firebase service account key (relative to the backend project)
GOOGLE_APPLICATION_CREDENTIALS=./chatterly-service-account.json

# Database connection string for your app (use MySQL container hostname "db")
ChatterlyConnectionString=Server=db;Database=your_database_name_here;User=your_db_user_here;Password=your_db_password_here;

# JWT settings
ChatterlyJWTKey=your_jwt_secret_key_here
ChatterlyIssuer=your_token_issuer_here
ChatterlyAudience=your_token_audience_here
ChatterlyJWTExpiresInMinutes=60 # or another number (e.g., 30, 120)
ChatterlyRefreshTokenExpiresInDays=7 # or another number (e.g., 14, 30)

# SMTP (email) settings
ChatterlySMTPUsername=your_smtp_username_here
ChatterlySMTPPassword=your_smtp_password_here

# MySQL database settings
MYSQL_DATABASE=your_mysql_database_name_here
MYSQL_USER=your_mysql_user_here
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here
